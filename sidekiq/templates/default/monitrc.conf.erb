check process sidekiq_<%= @app_name %>
  with pidfile <%= @deploy[:deploy_to] %>/shared/pids/sidekiq.pid
  start program = "/usr/bin/sudo su deploy -c 'cd <%= @deploy[:deploy_to] %>/current;  RAILS_ENV=production bundle exec sidekiq -C <%= @deploy[:deploy_to] %>/config/sidekiq_conf.yml -P <%= @deploy[:deploy_to] %>/shared/pids/sidekiq.pid'" with timeout 90 seconds
  stop program = "/bin/kill -s INT `cat <%= @deploy[:deploy_to] %>/shared/pids/sidekiq.pid`" with timeout 180 seconds
  if totalmem is greater than 300 MB for 2 cycles then restart # eating up memory?
  group sidekiq_<%= @app_name %>
